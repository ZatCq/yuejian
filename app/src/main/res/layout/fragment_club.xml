<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.yuejian_22.Fragment.ClubFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<ImageButton-->
        <!--android:layout_width=""-->
        <!--android:layout_height="" />-->

    <RadioGroup
        android:background="@drawable/club_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:button="@null"
            android:id="@+id/radio_search_club"
            android:background="@drawable/ic_search"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:button="@null"
            android:id="@+id/radio_p"
            android:text="最具人气"
            android:textSize="25dp"
            android:background="@drawable/text_color"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <RadioButton
            android:button="@null"
            android:id="@+id/radio_d"
            android:text="离我最近"
            android:background="@drawable/text_color"
            android:textSize="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />



    </RadioGroup>
    <FrameLayout
        android:id="@+id/fragment_holder_club"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        ></FrameLayout>



</RelativeLayout>
